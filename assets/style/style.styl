@import "common.styl"
@import "about.styl"

*
  box-sizing: border-box;
.hand
  cursor pointer 
.container {
    flex: 1 1 100%;
    margin: auto;
    padding: 24px;
    width: 100%;
}

@media only screen and (min-width: 960px){
  .container {
      max-width: 900px;
  }
}
@media only screen and (min-width: 1264px){
  .container {
      max-width: 1185px;
  }
}
@media only screen and (min-width: 1904px){
  .container.big {
      max-width: 1785px;
  }  
}
.wrap {
    flex-wrap: wrap;
}
.shrink {
    flex-grow: 0 !important;
    flex-shrink: 1 !important;
}
.big-logo  
  display flex
  height: 256px;
  width: 256px;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center center;
  // background-image url(/assets/images/icollect-logo-300.png)
header
  top 0
  z-index: 999;
  box-sizing: border-box;
  width: 100%;
  padding 0 24px
  height 58px
  color #fff
  font-size 21px
  background-color: #1867c0
  border-color: #1867c0
  display flex
  align-items: center;
  &.fixed
    position: fixed;
  &+div
    margin-top:58px !important
  .title
    font-family: Roboto, sans-serif;
    font-weight: 300;
    font-size: 21px;
    height: 58px;
    line-height: 58px;
  .logo
    background-size: contain;
  nav
    text-transform: capitalize;
    font-size: 16px;
    font-weight: 300;
    display flex
    a,span
      padding 0 24px
      height 58px
      line-height 58px
      vertical-align middle
      i
        margin-left 4px
      .dropdown
        display none
        background: #fff;
        color: rgba(0, 0, 0, 0.87) !important;
        width: 260px;
        right: 50px;
        padding: 16px;
        font-size: 12px;
        line-height: 30px;
        border-radius: 4px;
        position: absolute;
        transition: box-shadow 280ms cubic-bezier(0.4, 0, 0.2, 1);
        will-change: box-shadow;
        box-shadow: 0px 5px 5px -3px rgba(0, 0, 0, 0.2), 0px 8px 10px 1px rgba(0, 0, 0, 0.14), 0px 3px 14px 2px rgba(0, 0, 0, 0.12);
        b
          font-size: 14px;
          color: #1c8cd0;
          font-weight: bold;
        span.logout
          height inherit
          line-height normal
          float: right;
          padding: 4px 16px;
          &:hover
            background-color: #d9e8f5;
        a::before
          content none
.slegon
  align-items: center;
  display: flex;
  flex: 1;
  h1
    color #fff;  
    font-size: 56px !important;
    font-weight: 300;
    line-height: 1.35 !important;
    letter-spacing: -0.02em !important;
    font-family: 'Roboto', sans-serif !important
  .download
    padding: 0 50px !important;
    color #1867c0b8 !important;
    font-weight bold;
    text-decoration none
    cursor: pointer;
    line-height 44px
    display inline-block
    font-size: 15px;
    height: 44px;
    padding: 0 32px;
    border-radius: 2px;
    background-color: #fff;
    border-color: #fff;
    box-shadow: 0px 3px 1px -2px rgba(0,0,0,0.2), 0px 2px 2px 0px rgba(0,0,0,0.14), 0px 1px 5px 0px rgba(0,0,0,0.12);
    
@media only screen and (max-width: 700px){
  header {
    position relative !important;
    nav{
        display: block !important;
        width: 100%;
        position: absolute;
        left: 0;
        top: 58px;
        background-color: #1867c0;
        text-align: center;
      a {
        font-size:12px;
        padding 0 12px;
      }      
    }
  }
}    
.img
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
  
.banner
  ul
    display flex
    justify-content: center;
    li
      max-width: 350px;
      background-color: #fff;
      border-color: #fff;
      flex 1 1 auto
      border-radius: 6px  
      overflow hidden
      text-align center
      color: rgba(0,0,0,0.87)
      margin 12px
      .img
        padding-bottom: 38.5%;        
      .text
        padding 16px
        h5
          font-size 16px
          font-weight: 700
          line-height 24px
        h6 
          font-size 14px
          font-weight normal
          line-height 21px
.weblist
  .img
    display inline-block   
    background-size: contain;       

