body  
  padding-top:68px
  .main-bg
    background: linear-gradient(to bottom, #1867c0, #5CBBF6) no-repeat;
  .navbar
    font-family: Roboto, sans-serif;
    font-weight: 300;
    font-size: 21px;
    line-height: 58px;
    min-height: 68px;
    background-color: #1867c0;
    border-color: #1867c0;
    padding 0 12px
    .navbar-collapse
      flex-grow: revert; 
  .hero
    h1,h2
      color: #fff;
      font-size: 56px !important;
      font-weight: 300;
      line-height: 1.35 !important;
      letter-spacing: -0.02em !important;
      font-family: 'Roboto', sans-serif !important;
    h2
      font-size: 46px !important;
    a.download
      padding: 0 50px !important;
      color: rgba(24,103,192,0.722) !important;
      font-weight: bold;
      text-decoration: none;
      cursor: pointer;
      line-height: 44px;
      display: inline-block;
      font-size: 15px;
      height: 44px;
      padding: 0 32px;
      border-radius: 2px;
      background-color: #fff;
      border-color: #fff;
      box-shadow: 0px 3px 1px -2px rgba(0,0,0,0.2), 0px 2px 2px 0px rgba(0,0,0,0.14), 0px 1px 5px 0px rgba(0,0,0,0.12);
  .banner
    .img
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center center;
      border-radius: 6px 6px 0 0;
    .card   
      border none
      border-radius 6px;
      height: 100%;   
      .card-title
        font-size: 16px;
        font-weight: 700;
        line-height: 24px;
      .card-text
        font-size: 14px;
        font-weight: normal;
        line-height: 21px;
.footer
  background: #212121;
  color: #fff;
  font-size: 14px;